<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="10dp"
    tools:context="com.example.user.cabbookingapp.ui.UserActivity">

    <RelativeLayout
        android:id="@+id/userLayout"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/usermage"
            android:src="@drawable/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/textView"
            android:layout_alignBottom="@+id/userLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@+id/usermage"
            android:textSize="20dp"
            android:text="User name"/>
    </RelativeLayout>

    <Button
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_drawble"
        android:layout_width="match_parent"
        android:text="get Timing"
        android:textColor="@android:color/white"
        android:layout_height="40dp" />

    <Button
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_drawble"
        android:layout_width="match_parent"
        android:text="get Route"
        android:textColor="@android:color/white"
        android:layout_height="40dp" />




</LinearLayout>
